{
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "dev": "concurrently -c \"red,blue\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && yarn develop",
    "dev:frontend": "cd frontend && npm run dev",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install": "concurrently -c  \"red,blue\" \"npm run install:backend\" \"npm run install:frontend\""
  }
}
